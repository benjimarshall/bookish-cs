@model Bookish.Web.Models.CatalogueViewModel

@{
    ViewData["Title"] = "Catalogue";
}

<h1 class="display-4">Catalogue</h1>
<br />

@if (!Model.Books.Any())
{
    <p>The catalogue is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th width="30%">Title</th>
                <th width="25%">Authors</th>
                <th width="15%">ISBN</th>
                <th width="10%">Available Copies</th>
                <th width="10%">Total Copies</th>
                <th width="10%">More details</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var book in Model.Books)
            {
                <tr>
                    <td> @book.Title </td>
                    <td> @book.Authors </td>
                    <td> @book.Isbn </td>
                    <td> @book.AvailableCopies </td>
                    <td> @book.TotalCopies </td>
                    <td> - </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
}
