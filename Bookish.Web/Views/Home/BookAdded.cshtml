@model BookAddedViewModel

@{
    ViewData["Title"] = "Book added";
}

<h1 class="display-4">"@Model.Title" Added!</h1>

<div class="row align-items-center">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <table class="table top-padded">
            <thead>
            <tr>
                <th>Copy ID</th>
                <th>Barcode</th>
            </tr>
            </thead>

            <tbody>
            @foreach (var bookCopy in @Model.Copies)
            {
                <tr>
                    <td>@bookCopy.CopyId</td>
                    <td><img src="@bookCopy.Barcode" /></td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <div class="col-sm-3"></div>
</div>
